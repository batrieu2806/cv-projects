{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build TextBuffer",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-g",
                "main.cpp",
                "TextBuffer.cpp",
                "-o",
                "textbuffer"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Run TextBuffer",
            "type": "shell",
            "command": "./textbuffer",
            "dependsOn": "Build TextBuffer",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
